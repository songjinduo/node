extends layout
block link
    link(rel='stylesheet', href='styleSheets/step2.css')
    script.
        function validata_phone(string) {
            var pattern = /^1[34578]\d{9}$/;
            if (pattern.test(string)) {
                return true;
            }
            alert('请输入正确的手机号码');
            return false;
        }
        function validate_required(field,alerttxt)
        {
            with (field)
            {
                if (value==null||value=="")
                {alert(alerttxt);return false}
                else {
                    if (!validata_phone(value)){
                        return false
                    }
                    return true;
                }
            }
        }
        function validate_form(thisform)
        {
            with (thisform)
            {
                if (validate_required(phone,"请输入手机号!")==false)
                {phone.focus();return false}
            }
        }
block content
    .number
        img.avatar(src='/images/avatar.jpg', alt='')
        form(action='step2', method='post', onsubmit='return validate_form(this);', enctype='multipart/form-data')
            label
                | 手机号：
                input(type='text', name='phone')
            br
            input(type='submit', value='验证，下一步')
    p
        | 群主正在有派发任务卡，有礼品赠送～
        br
        | 数量有限，抓紧验证！！
